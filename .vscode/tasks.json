{
	"tasks": [
		{
			"command": "bundle exec jekyll build",
			"group": {
				"isDefault": true,
				"kind": "build"
			},
			"label": "build",
			"problemMatcher": ["$jekyll-error", "$jekyll-warning"],
			"type": "shell"
		},
		{
			"command": "bundle exec jekyll serve",
			"group": {
				"isDefault": true,
				"kind": "test"
			},
			"isBackground": true,
			"label": "serve",
			"problemMatcher": ["$jekyll-error-watch", "$jekyll-warning-watch"],
			"type": "shell"
		}
	],
	"version": "2.0.0"
}
